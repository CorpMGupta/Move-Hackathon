<table border="1" width="100%">
  <tr>
    <td width="15%">
      <h2>Category List</h2>
    </td>
    <td width="85%" align="right">
      <%= flash[:message] %>
      <% flash[:message] = '' %>
    </td>
  </tr>
  <tr>
    <td width="15%" valign="top"><%= render :partial => '/adminlinks' %></td>
    <td width="85%" style="padding-left: 20px;">

    <% if @categories.blank? %>
        <p>There are no categories currently in the system.</p>
    <% else %>
        <p>These are the current categories in our system.</p>
        <table border="2">
          <% @categories.each do |c| %>
              <tr>
                <td><%= c.name %></td>
                <td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>
                <td><%= link_to 'Delete', {:action => 'destroy', :id => c.id}, :confirm => 'Confirm deletion?' %></td>
              </tr>
          <% end %>
        </table>
    <% end %>
    <p><%= link_to 'Create new category', {:action => 'new' } %></p>
    </td>
  </tr>
</table>
