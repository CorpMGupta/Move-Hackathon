<h1>Move Hackathon</h1>

<%= form_tag :action => 'login', method: :post %>

    <% if session[:authfail].eql?(true) %>
        <script>alert('Invalid username or password.')</script>
        <% session[:authfail] = false %>
    <% end %>

    <p>User Name</p>
    <p><%= text_field_tag('username', '') %></p>

    <p>Password</p>
    <p><%= password_field_tag('password', '') %></p>

<%= submit_tag 'Login' %>

